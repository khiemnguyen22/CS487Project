<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterDriver">

    <EditText
        android:id="@+id/makeRegister"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Car's Make"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307" />

    <EditText
        android:id="@+id/yearRegister"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Car's Year"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeRegister" />


    <Button
        android:id="@+id/button3"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:layout_marginTop="84dp"
        android:text="Register Driver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yearRegister" />


    <EditText
        android:id="@+id/modelReg"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Car's Model"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/makeRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <EditText
        android:id="@+id/licenseReg"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Car's License Number"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/makeRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modelReg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>